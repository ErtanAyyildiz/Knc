@model ProductEditDTO

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Ürünü Düzenle</h1>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" name="Id" value="@Model.Id">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="ProductImage"></label>
        <input type="file" name="ProductImage" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="SubCategoryId"></label>
        <select asp-for="SubCategoryId" asp-items="@(new SelectList(ViewBag.SubCategories, "Id", "Name"))" class="form-control">
            <option value="">Alt Kategori Seçin</option>
        </select>
        <img src="@Model.ImageUrl" width="500" height="300">
    </div>

    <div class="form-group">
        <input type="submit" value="Güncelle" class="btn btn-primary" />
    </div>
</form>
