@model List<Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Ürün Listesi</h1>

<p>
    <a asp-action="Create">Yeni Ürün Ekle</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>Stok Miktarı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Title</td>
                <td>@product.Description</td>
                <td>@product.StockAmount</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@product.Id">Düzenle</a> |
                    <a asp-action="Details" asp-route-id="@product.Id">Detaylar</a> |
                    <a asp-action="Delete" asp-route-id="@product.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>